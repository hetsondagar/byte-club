# Production Environment Variables for Byte Club Backend
# Copy this file to .env.production and fill in your actual values

# MongoDB Atlas Connection (replace with your actual connection string)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/byte_club_prod

# JWT Configuration (use a strong secret in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Server Configuration
PORT=3001
NODE_ENV=production

# Logging
LOG_LEVEL=info

# Judge0 via RapidAPI (get your key from RapidAPI)
RAPIDAPI_JUDGE0_KEY=your-rapidapi-key
RAPIDAPI_JUDGE0_HOST=judge0-ce.p.rapidapi.com

# CORS Configuration (add your frontend domain)
CORS_ORIGIN=https://your-vercel-app.vercel.app
